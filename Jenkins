pipeline {
  agent any

  options {
    disableConcurrentBuilds()
    skipDefaultCheckout(false)
  }

  triggers {
    // This forces Jenkins to check repo on every run
    pollSCM('* * * * *') // every minute, or remove if not needed
  }

  stages {
    stage('Checkout') {
      steps {
        git(
          branch: 'main',
          url: 'https://github.com/KrishTanna28/mlops-iris-demo.git',
          credentialsId: 'github-token'
        )
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'pip install -r requirements.txt'
      }
    }

    stage('Retrain Model') {
      steps {
        sh 'python3 retrain.py'
      }
    }

    stage('Deploy Model') {
      steps {
        sh 'cp iris_model.pkl /home/ubuntu/app/'
      }
    }
  }
}






































 




















